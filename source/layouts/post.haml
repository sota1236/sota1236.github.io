<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      はらへり日記#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag "normalize", "all", "http://yui.yahooapis.com/pure/0.5.0/pure-min.css", "http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css"
  %body{:class => page_classes}
    #layout.pure-g-r
      .sidebar.pure-u-1.pure-u-md-1-4
        = partial "menu"
      .content.pure-u-1.pure-u-md-3-4
        .posts
          #main{:role => "main"}
            %section.post
              %header.post-header
                %h2.post-title
                  = current_article.title
                %p.post-meta
                  = current_article.date.strftime '%b %e %Y'
                  %ul.tags
                    -current_article.data.tags.each do |f|
                      %li
                        = link_to f, "/blog/tags/#{f.downcase}.html"
              .post-description
                %p
                  = yield
