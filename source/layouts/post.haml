<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      Blog Title#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "/feed.xml", title: "Atom Feed"
  %body
    #main{:role => "main"}
      %h2
        = current_article.title
      %time
        = current_article.date.strftime '%b %e %Y'
      %ul.tags
        -current_article.data.tags.each do |f|
          %li
            = link_to f, "/blog/tags/#{f.downcase}.html"
      = yield
