<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      Blog Title#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag "all", "http://yui.yahooapis.com/pure/0.5.0/pure-min.css", "http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css"
  %body
    #layout.pure-g
      .sidebar.pure-u-1.pure-u-md-1-4
        =partial "menu"
      .content.pure-u-1.pure-u-md-3-4
        #main{:role => "main"}
          = yield
        %aside
          %h2 Recent Articles
          %ol
            - blog.articles[0...10].each do |article|
              %li
                = link_to article.title, article
                %span= article.date.strftime('%b %e')
          %h2 Tags
          %ol
            - blog.tags.each do |tag, articles|
              %li= link_to "#{tag} (#{articles.size})", tag_path(tag)
          %h2 By Year
          %ol
            - blog.articles.group_by {|a| a.date.year }.each do |year, articles|
              %li= link_to "#{year} (#{articles.size})", blog_year_path(year)
